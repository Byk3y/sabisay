# ===========================================
# PakoMarket Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local files to version control

# ===========================================
# Server-only Environment Variables (Required)
# ===========================================
# These are used by the server and API routes only

# Magic Link Authentication
MAGIC_SECRET_KEY=your_magic_secret_key_here
MAGIC_PUBLISHABLE_KEY=pk_live_your_magic_publishable_key_here

# Session Management
IRON_SESSION_PASSWORD=your_iron_session_password_here_minimum_32_chars

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Biconomy for Gasless Transactions
BICONOMY_API_KEY=your_biconomy_api_key_here

# RPC Configuration
ALCHEMY_AMOY_RPC_URL=https://polygon-amoy.g.alchemy.com/v2/your_api_key

# ===========================================
# Deploy-only Variables (Contracts)
# ===========================================
# These are only needed when deploying contracts

PRIVATE_KEY=your_deployer_private_key_here
USDC_ADDRESS=0x... # Optional: pre-deployed USDC address
TREASURY_ADDRESS=0x... # Treasury address for protocol fees

# ===========================================
# Public Environment Variables (Browser)
# ===========================================
# These are exposed to the browser and must start with NEXT_PUBLIC_

# Chain Configuration
NEXT_PUBLIC_CHAIN_ID=80002
NEXT_PUBLIC_RPC_URL=https://polygon-amoy.g.alchemy.com/v2/your_api_key

# WalletConnect
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Contract Addresses (filled after deployment)
NEXT_PUBLIC_USDC_ADDRESS=0x...
NEXT_PUBLIC_FACTORY_ADDRESS=0x...
